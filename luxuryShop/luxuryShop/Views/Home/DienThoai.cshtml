<script>
    $(function () {
        $("#slider-range").slider({
            range: true,
            min: 0,
            max: 50000000,
            values: [1000000, 10000000],
            slide: function (event, ui) {
                $("#amount").val(ui.values[0] + "đ - " +  ui.values[1] + "đ");
            }
        });
        $("#amount").val($("#slider-range").slider("values", 0)+"đ - " +
             $("#slider-range").slider("values", 1)+"đ");
    });
</script>