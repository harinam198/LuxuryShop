<div class="container">
    <form id="order-form" action="/" method="post">
        <h3 style="margin-top: 30px; font-weight:600; font-size:25px">THÔNG TIN THANH TOÁN</h3>
        <div class="form-row">
            <div class="form-group col-md-6">
                <label for="Name">Họ và tên</label>
                <input type="text" class="form-control" id="ShipName" name="OrderName" placeholder="Họ và tên">
            </div>
            <div class="form-group col-md-6">
                <label for="PhoneNunmber">Số điện thoại</label>
                <input type="text" class="form-control" id="ShipMobile" name="OrderMobile" placeholder="Số điện thoại">
            </div>
        </div>
        <div class="form-group">
            <label for="Email">Email</label>
            <input type="email" class="form-control" id="ShipEmail" name="OrderEmail" placeholder="Email">
        </div>
        <div class="form-group">
            <label for="inputAddress2">Địa chỉ</label>
            <input type="text" class="form-control" id="ShipAddress" name="OrderAddress" placeholder="Địa chỉ cụ thể">
        </div>
    </form>
    <button type="button" class="btn btn-primary" id="button-pay" onclick="checkValue()">Thanh toán</button>
</div>
<script>

    $(function () {
        $('input[name="ShipName"]' && 'input[name="ShipMobile"]' && 'input[name="ShipEmail"]' && 'input[name="ShipAddress"]').change(function () {
            if ($(this).val()) {
                $("#button-pay").prop("type", "submit");
            }
        })
    })
</script>